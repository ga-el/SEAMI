---
// src/pages/complete-profile.astro
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>SEAMI - Completa tu Perfil</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>

  <body class="dark-mode">

    <!-- Header -->
    <header class="header">
      <a href="/" class="logo">SEAMI</a>
      <button id="toggle-theme" class="theme-toggle">üåô</button>
    </header>

    <!-- Contenido principal -->
    <main style="padding: 2rem;">
      <section class="glass-container">
        <h2>Completa tu Perfil de Alumno</h2>

        <!-- Formulario -->
        <form method="post" action="/dashboard" class="auth-form">
          <!-- Datos personales -->
          <div class="form-row">
            <input type="text" name="first_name" placeholder="Nombre(s)" required />
            <input type="text" name="last_name" placeholder="Apellido Paterno" />
          </div>

          <div class="form-row">
            <input type="text" name="second_last_name" placeholder="Apellido Materno (opcional)" />
            <input type="number" name="semester" placeholder="Semestre actual (ej. 5)" min="1" max="12" required />
          </div>

          <input type="date" name="birthdate" placeholder="Fecha de nacimiento" />

          <!-- Materias y Profesores -->
          <h3>Materias y Profesores Asignados</h3>
          <p class="subtext">Escribe cada materia con su profesor:</p>

          <div class="table-like">
            <input type="text" name="subject1" placeholder="Materia 1" />
            <input type="text" name="teacher1" placeholder="Profesor 1" />
          </div>

          <div class="table-like">
            <input type="text" name="subject2" placeholder="Materia 2" />
            <input type="text" name="teacher2" placeholder="Profesor 2" />
          </div>

          <div class="table-like">
            <input type="text" name="subject3" placeholder="Materia 3" />
            <input type="text" name="teacher3" placeholder="Profesor 3" />
          </div>

          <div class="table-like">
            <input type="text" name="subject4" placeholder="Materia 4" />
            <input type="text" name="teacher4" placeholder="Profesor 4" />
          </div>

          <div class="table-like">
            <input type="text" name="subject5" placeholder="Materia 5" />
            <input type="text" name="teacher5" placeholder="Profesor 5" />
          </div>

          <!-- Bot√≥n de registro -->
          <button type="submit">Finalizar Registro</button>
        </form>
      </section>
    </main>

    <!-- Script para modo oscuro -->
    <script is:inline>
      const toggleBtn = document.getElementById('toggle-theme');
      const body = document.body;

      // Cargar tema desde localStorage
      const savedTheme = localStorage.getItem('theme');
      if (savedTheme === 'light') {
        body.classList.remove('dark-mode');
        toggleBtn.textContent = '‚òÄÔ∏è';
      }

      // Cambiar tema y guardar en localStorage
      toggleBtn.addEventListener('click', () => {
        body.classList.toggle('dark-mode');
        const isDarkMode = body.classList.contains('dark-mode');
        if (isDarkMode) {
          toggleBtn.textContent = 'üåô';
          localStorage.setItem('theme', 'dark');
        } else {
          toggleBtn.textContent = '‚òÄÔ∏è';
          localStorage.setItem('theme', 'light');
        }
      });
    </script>

    <style>
      /* Reset b√°sico */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', sans-serif;
      }

      body {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(to right bottom, #0f172a, #1e293b);
        color: white;
        transition: background 0.4s ease, color 0.4s ease;
      }

      .light-mode {
        background: linear-gradient(to right bottom, #e0e0e0, #ffffff);
        color: #333;
      }

      .light-mode .glass-container {
        background: rgba(255, 255, 255, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.3);
      }

      .light-mode input,
      .light-mode select,
      .light-mode button {
        background: rgba(255, 255, 255, 0.9);
        color: #333;
      }

      .light-mode button {
        background-color: #0f172a;
        color: white;
        border: none;
      }

      .light-mode .header {
        background: #ffffffcc;
        color: #0f172a;
        border-bottom: 1px solid #ccc;
      }

      .light-mode .logo {
        color: #0f172a;
      }

      .light-mode .theme-toggle {
        background-color: #0f172a;
        color: white;
      }

      /* === Header === */
      .header {
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(10px);
        padding: 1rem 2rem;
        color: white;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
        transition: all 0.3s ease;
      }

      .logo {
        font-size: 1.7rem;
        font-weight: bold;
        color: #8bc34a;
        text-decoration: none;
        cursor: pointer;
        transition: color 0.3s ease;
      }

      .logo:hover {
        color: #6aab3b;
      }

      .theme-toggle {
        background: transparent;
        border: none;
        font-size: 1.2rem;
        cursor: pointer;
        color: white;
        transition: transform 0.3s ease;
      }

      .theme-toggle:hover {
        transform: rotate(45deg);
      }

      /* === Contenedor Glassmorphic === */
      .glass-container {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 16px;
        padding: 2rem;
        max-width: 600px;
        width: 100%;
        text-align: center;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        animation: fadeInUp 0.8s ease-out;
      }

      h2 {
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
        color: #ffffffcc;
      }

      h3 {
        font-size: 1.2rem;
        margin-top: 1.5rem;
        margin-bottom: 0.5rem;
        color: #ffffffcc;
        text-align: left;
      }

      .subtext {
        text-align: left;
        font-size: 0.9rem;
        margin-bottom: 1rem;
        color: #cccccc;
      }

      .form-row {
        display: flex;
        gap: 1rem;
        margin-bottom: 1.5rem;
      }

      .form-row input {
        flex: 1;
        padding: 0.8rem;
        border: none;
        border-radius: 8px;
        background: rgba(255, 255, 255, 0.1);
        color: white;
        outline: none;
        font-size: 1rem;
        transition: background 0.3s ease;
      }

      .form-row input:focus {
        background: rgba(255, 255, 255, 0.15);
        box-shadow: 0 0 5px rgba(139, 195, 74, 0.4);
      }

      /* === Dise√±o de tabla personalizada === */
      .table-like {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
        margin-bottom: 1rem;
      }

      .table-like input {
        padding: 0.8rem;
        border: none;
        border-radius: 8px;
        background: rgba(255, 255, 255, 0.1);
        color: white;
        font-size: 1rem;
        transition: background 0.3s ease;
      }

      .table-like input:focus {
        background: rgba(255, 255, 255, 0.15);
        box-shadow: 0 0 5px rgba(139, 195, 74, 0.4);
      }

      @media (max-width: 600px) {
        .form-row,
        .table-like {
          grid-template-columns: 1fr;
          flex-direction: column;
        }

        .table-like {
          display: flex;
        }

        .form-row input,
        .table-like input {
          font-size: 1rem;
        }
      }

      /* === Bot√≥n finalizar === */
      .auth-form button {
        padding: 0.8rem;
        background: transparent;
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
        font-weight: bold;
      }

      .auth-form button:hover {
        background-color: #8bc34a;
        color: #0f172a;
        border-color: #8bc34a;
        transform: scale(1.02);
      }

      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
    </style>
  </body>
</html>