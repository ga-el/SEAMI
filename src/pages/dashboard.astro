    <!-- Script para modo oscuro -->
    <script is:inline>
      const toggleBtn = document.getElementById("toggle-theme");
      const body = document.body;

      const savedTheme = localStorage.getItem("theme");
      if (savedTheme === "light") {
        body.classList.remove("dark-mode");
        toggleBtn.textContent = "‚òÄÔ∏è";
      }

      toggleBtn.addEventListener("click", () => {
        body.classList.toggle("dark-mode");
        const isDark = body.classList.contains("dark-mode");
        toggleBtn.textContent = isDark ? "üåô" : "‚òÄÔ∏è";
        localStorage.setItem("theme", isDark ? "dark" : "light");
      });
    </script>

<script is:inline>
    const profileBtn = document.getElementById('profile-btn');
    const dropdownMenu = document.getElementById('dropdown-menu');
  
    profileBtn.addEventListener('click', () => {
      dropdownMenu.classList.toggle('hidden');
    });
  
    // Opcional: cerrar men√∫ al hacer clic fuera
    document.addEventListener('click', function(event) {
      if (!profileBtn.contains(event.target) && !dropdownMenu.contains(event.target)) {
        dropdownMenu.classList.add('hidden');
      }
    });
  </script>

    <!-- Estilos -->
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Segoe UI", sans-serif;
      }

      body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        background: linear-gradient(to right bottom, #0f172a, #1e293b);
        color: white;
        transition:
          background 0.4s ease,
          color 0.4s ease;
      }

      .light-mode {
        background: linear-gradient(to right bottom, #e0e0e0, #ffffff);
        color: #333;
      }

      /* === Header === */
      .header {
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(10px);
        padding: 1rem 2rem;
        color: white;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
        transition: all 0.3s ease;
      }

      .logo {
        font-size: 1.7rem;
        font-weight: bold;
        color: #8bc34a;
        text-decoration: none;
        cursor: pointer;
        transition: color 0.3s ease;
      }

      .logo:hover {
        color: #6aab3b;
      }

      .search-container input {
        border: none;
        border-radius: 8px;
        padding: 0.6rem 1rem;
        outline: none;
        background: rgba(255, 255, 255, 0.1);
        color: white;
        transition: background 0.3s ease;
      }

      .search-container input:focus {
        background: rgba(255, 255, 255, 0.15);
        box-shadow: 0 0 5px rgba(139, 195, 74, 0.4);
      }

      /* === Bot√≥n de Perfil === */
      .profile-dropdown {
        position: relative;
        display: inline-block;
      }

      .profile-icon {
        background: transparent;
        border: none;
        font-size: 1.2rem;
        color: white;
        cursor: pointer;
        transition: transform 0.3s ease;
      }

      .profile-icon:hover {
        transform: scale(1.1);
      }

      /* === Men√∫ Desplegable === */
      .dropdown-content {
        position: absolute;
        right: 0;
        top: 2.5rem;
        background: rgba(255, 255, 255, 0.1);
        min-width: 150px;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.15);
        z-index: 1000;
        transition:
          opacity 0.3s ease,
          visibility 0.3s ease;
      }

      .dropdown-content.hidden {
        display: none;
      }

      .dropdown-content button,
      .dropdown-content a {
        color: white;
        padding: 0.75rem 1rem;
        text-decoration: none;
        display: block;
        width: 100%;
        text-align: left;
        background: transparent;
        border: none;
        cursor: pointer;
        transition: background 0.3s ease;
      }

      .dropdown-content a:hover,
      .dropdown-content button:hover {
        background-color: rgba(255, 255, 255, 0.1);
      }
      .theme-toggle {
        background: transparent;
        border: none;
        font-size: 1.2rem;
        cursor: pointer;
        color: white;
        transition: transform 0.3s ease;
      }

      .theme-toggle:hover {
        transform: rotate(45deg);
      }

      .search-bar {
        margin-top: 6rem;
        padding: 1rem 2rem;
        width: 100%;
        max-width: 800px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 16px;
        backdrop-filter: blur(10px);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
      }

      .search-bar input {
        width: 100%;
        padding: 0.8rem;
        border: none;
        border-radius: 8px;
        background: rgba(255, 255, 255, 0.1);
        color: white;
        outline: none;
        font-size: 1rem;
      }

      .video-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
        margin-top: 1.5rem;
        padding: 0 2rem;
        max-width: 1000px;
        width: 100%;
      }

      .video-card {
        display: flex;
        flex-direction: column;
        cursor: pointer;
        transition: transform 0.2s ease;
      }

      .video-card:hover {
        transform: scale(1.02);
      }

      .video-thumbnail {
        position: relative;
        width: 100%;
        aspect-ratio: 16 / 9;
        border-radius: 8px;
        overflow: hidden;
      }

      .video-thumbnail img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
      }

      .video-duration {
        position: absolute;
        bottom: 6px;
        right: 6px;
        background: rgba(0, 0, 0, 0.75);
        color: #fff;
        font-size: 0.75rem;
        padding: 2px 6px;
        border-radius: 4px;
      }

      .video-details {
        padding-top: 0.6rem;
        display: flex;
        flex-direction: column;
        gap: 0.2rem;
      }

      .video-title {
        font-size: 1rem;
        font-weight: 600;
        line-height: 1.2;
        color: inherit;
      }

      .video-meta {
        font-size: 0.85rem;
        color: #ccc;
      }

      @media (max-width: 600px) {
        .search-bar {
          padding: 1rem;
        }

        .video-grid {
          grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        }
      }
    </style>
  </body>
</html>
