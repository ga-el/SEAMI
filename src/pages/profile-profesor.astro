---
// src/pages/profile-profesor.astro

const teacher = {
  name: "Profesor Mario G√≥mez",
  email: "mario.gomez@escuela.edu",
  photo: "https://via.placeholder.com/150",
  videos: [
    {
      title: "Introducci√≥n a √Ålgebra",
      url: "https://www.youtube.com/embed/HEfHFsfGXjs",
    },
    {
      title: "Funciones Cuadr√°ticas",
      url: "https://www.youtube.com/embed/D1vQXKf1uKk",
    },
  ],
};
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Perfil del Maestro - SEAMI</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>

  <body class="dark-mode">
    <!-- Header desde register.astro -->
    <header class="header">
      <a href="/dashboard" class="logo">SEAMI</a>

      <div class="actions">
        <!-- Bot√≥n para cambiar tema -->
        <button id="toggle-theme" class="theme-toggle">üåô</button>

        <!-- Bot√≥n de perfil con men√∫ desplegable -->
        <div class="profile-dropdown">
          <button id="profile-btn" class="profile-icon">üë§</button>
          <div id="dropdown-menu" class="dropdown-content hidden">
            <a href="/profile" class="dropdown-item">Ver Perfil</a>
            <a href="/logout" class="dropdown-item">Cerrar Sesi√≥n</a>
          </div>
        </div>
      </div>
    </header>

    <main class="profile-container">
      <section class="profile-card">
        <img src={teacher.photo} alt="Foto del Maestro" class="profile-img" />
        <h1>{teacher.name}</h1>
        <p>{teacher.email}</p>
        <div class="button-container">
          <a href="/editar-perfil" class="edit-btn">Editar perfil</a>
          <a href="/editar-perfil" class="edit-btn">Subir videos</a>
        </div>
      </section>

      <!-- Mis Videos -->
      <section class="videos-section">
        <h2>Mis Videos</h2>
        <div class="videos-grid">
          {
            teacher.videos.map((video) => (
              <div class="video-card">
                <iframe
                  width="100%"
                  height="200"
                  src={video.url}
                  title={video.title}
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                />
                <p>{video.title}</p>
              </div>
            ))
          }
        </div>
      </section>
    </main>

    <!-- Dark mode toggle -->
    <script is:inline>
      const toggleBtn = document.getElementById("toggle-theme");
      const body = document.body;

      const savedTheme = localStorage.getItem("theme");
      if (savedTheme === "light") {
        body.classList.remove("dark-mode");
        toggleBtn.textContent = "‚òÄÔ∏è";
      }

      toggleBtn.addEventListener("click", () => {
        body.classList.toggle("dark-mode");
        const isDark = body.classList.contains("dark-mode");
        toggleBtn.textContent = isDark ? "üåô" : "‚òÄÔ∏è";
        localStorage.setItem("theme", isDark ? "dark" : "light");
      });

      const profileBtn = document.getElementById("profile-btn");
      const dropdownMenu = document.getElementById("dropdown-menu");

      profileBtn.addEventListener("click", () => {
        dropdownMenu.classList.toggle("hidden");
      });

      document.addEventListener("click", function (event) {
        if (
          !profileBtn.contains(event.target) &&
          !dropdownMenu.contains(event.target)
        ) {
          dropdownMenu.classList.add("hidden");
        }
      });
    </script>

    <style>
      /* Header del register.astro */
      .header {
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(10px);
        padding: 1rem 2rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
        animation: fadeInUp 0.8s ease-out;
      }

      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @media (max-width: 600px) {
        .glass-container {
          padding: 1.5rem;
          margin: 1rem;
        }
      }

      .actions {
        display: flex;
        align-items: center;
        gap: 1rem;
      }

      .logo {
        font-size: 1.7rem;
        font-weight: bold;
        color: #8bc34a;
        text-decoration: none;
        cursor: pointer;
        transition: color 0.3s ease;
      }

      .logo:hover {
        color: #6aab3b;
      }

      .theme-toggle {
        background: transparent;
        border: none;
        font-size: 1.2rem;
        cursor: pointer;
        color: white;
        transition: transform 0.3s ease;
      }

      .theme-toggle:hover {
        transform: rotate(45deg);
      }

      /* Estilos generales */
      body {
        margin: 0;
        padding-top: 80px;
        font-family: "Segoe UI", sans-serif;
        background: linear-gradient(to right bottom, #0f172a, #50315c);
        color: white;
        animation: fadeInUp 0.8s ease-out;
      }

      .profile-container {
        max-width: 1000px;
        margin: auto;
        padding: 2rem;
      }

      .profile-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(12px);
        padding: 2rem;
        border-radius: 16px;
        text-align: center;
        box-shadow: 0 0 12px rgba(0, 0, 0, 0.3);
        margin-bottom: 2rem;
        animation: fadeInUp 0.8s ease-out 0.2s backwards;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .profile-img {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
        margin-bottom: 1rem;
        border: 3px solid #8bc34a;
        animation: fadeInUp 0.8s ease-out 0.4s backwards;
        aspect-ratio: 1/1;
        display: block;
        margin-left: auto;
        margin-right: auto;
      }

      .button-container {
        display: flex;
        gap: 1rem;
        margin-top: 1.5rem;
        animation: fadeInUp 0.8s ease-out 0.6s backwards;
      }

      .edit-btn {
        display: inline-block;
        padding: 0.8rem 1.5rem;
        border: none;
        background-color: #8bc34a;
        color: #0f172a;
        font-weight: bold;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 0.95rem;
        min-width: 140px;
        text-align: center;
      }

      .edit-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 4px 12px rgba(139, 195, 74, 0.3);
        background-color: #9ccc65;
      }

      .edit-btn:active {
        transform: translateY(-1px);
      }

      .videos-section {
        animation: fadeInUp 0.8s ease-out 0.8s backwards;
      }

      .videos-section h2 {
        margin-bottom: 1rem;
        text-align: center;
        color: #8bc34a;
      }

      .videos-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
      }

      .video-card {
        background: rgba(255, 255, 255, 0.07);
        border-radius: 12px;
        overflow: hidden;
        padding: 1rem;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        text-align: center;
        animation: fadeInUp 0.8s ease-out backwards;
      }

      .video-card:nth-child(1) { animation-delay: 1s; }
      .video-card:nth-child(2) { animation-delay: 1.2s; }

      .video-card p {
        margin-top: 0.5rem;
        font-weight: 500;
      }

      @media (max-width: 600px) {
        .profile-card,
        .videos-section {
          padding: 1rem;
        }

        .video-card iframe {
          height: 180px;
        }

        .button-container {
          flex-direction: column;
          gap: 0.8rem;
        }

        .edit-btn {
          width: 100%;
          padding: 0.7rem 1.2rem;
        }
      }

      .profile-dropdown {
        position: relative;
      }

      .profile-icon {
        background: transparent;
        border: none;
        font-size: 1.2rem;
        color: white;
        cursor: pointer;
      }

      .dropdown-content {
        position: absolute;
        right: 0;
        top: 2.5rem;
        background: rgba(255, 255, 255, 0.1);
        min-width: 150px;
        border-radius: 8px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.15);
        z-index: 1000;
      }

      .dropdown-content.hidden {
        display: none;
      }

      .dropdown-content a {
        color: white;
        padding: 0.75rem 1rem;
        text-decoration: none;
        display: block;
        transition: background 0.3s ease;
      }

      .dropdown-content a:hover {
        background-color: rgba(255, 255, 255, 0.1);
      }

      .light-mode .header {
        background: #ffffffcc;
        color: #0f172a;
        border-bottom: 1px solid #ccc;
      }

      .light-mode .logo {
        color: #0f172a;
      }

      .light-mode .theme-toggle {
        background-color: #0f172a;
        color: white;
      }

      .light-mode .dropdown-content {
        background: rgba(255, 255, 255, 0.9);
        border: 1px solid rgba(0, 0, 0, 0.1);
      }

      .light-mode .dropdown-content a {
        color: #0f172a;
      }

      .light-mode .dropdown-content a:hover {
        background-color: rgba(0, 0, 0, 0.05);
      }
    </style>
  </body>
</html>
