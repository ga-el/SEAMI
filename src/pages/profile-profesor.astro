---
// src/pages/profile-profesor.astro

const teacher = {
  name: "Profesor Mario G√≥mez",
  email: "mario.gomez@escuela.edu",
  photo: "https://via.placeholder.com/150",
  videos: [
    {
      title: "Introducci√≥n a √Ålgebra",
      url: "https://www.youtube.com/embed/HEfHFsfGXjs",
    },
    {
      title: "Funciones Cuadr√°ticas",
      url: "https://www.youtube.com/embed/D1vQXKf1uKk",
    },
  ],
};
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Perfil del Maestro - SEAMI</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>

  <body class="dark-mode">
    <!-- Header desde register.astro -->
    <header class="header">
      <a href="/dashboard-profesor" class="logo">SEAMI</a>
      <button id="toggle-theme" class="theme-toggle">üåô</button>
    </header>

    <main class="profile-container">
      <section class="profile-card">
        <img src={teacher.photo} alt="Foto del Maestro" class="profile-img" />
        <h1>{teacher.name}</h1>
        <p>{teacher.email}</p>
        <a href="/editar-perfil" class="edit-btn">Editar perfil </a>
        <a href="/editar-perfil" class="edit-btn"> subir videos</a>
      </section>

      <!-- Mis Videos -->
      <section class="videos-section">
        <h2>Mis Videos</h2>
        <div class="videos-grid">
          {
            teacher.videos.map((video) => (
              <div class="video-card">
                <iframe
                  width="100%"
                  height="200"
                  src={video.url}
                  title={video.title}
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                />
                <p>{video.title}</p>
              </div>
            ))
          }
        </div>
      </section>
    </main>

    <!-- Dark mode toggle -->
    <script is:inline>
      const toggleBtn = document.getElementById("toggle-theme");
      const body = document.body;

      const savedTheme = localStorage.getItem("theme");
      if (savedTheme === "light") {
        body.classList.remove("dark-mode");
        toggleBtn.textContent = "‚òÄÔ∏è";
      }

      toggleBtn.addEventListener("click", () => {
        body.classList.toggle("dark-mode");
        const isDark = body.classList.contains("dark-mode");
        toggleBtn.textContent = isDark ? "üåô" : "‚òÄÔ∏è";
        localStorage.setItem("theme", isDark ? "dark" : "light");
      });
    </script>

    <style>
      /* Header del register.astro */
      .header {
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(10px);
        padding: 1rem 2rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
      }

      .actions {
        display: flex;
        align-items: center;
        gap: 1rem;
      }

      .logo {
        font-size: 1.7rem;
        font-weight: bold;
        color: #8bc34a;
        text-decoration: none;
        cursor: pointer;
        transition: color 0.3s ease;
      }

      .logo:hover {
        color: #6aab3b;
      }

      .theme-toggle {
        background: transparent;
        border: none;
        font-size: 1.2rem;
        cursor: pointer;
        color: white;
      }

      /* Estilos generales */
      body {
        margin: 0;
        padding-top: 80px;
        font-family: "Segoe UI", sans-serif;
        background: linear-gradient(to right bottom, #0f172a, #50315c);
        color: white;
      }

      .profile-container {
        max-width: 1000px;
        margin: auto;
        padding: 2rem;
      }

      .profile-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(12px);
        padding: 2rem;
        border-radius: 16px;
        text-align: center;
        box-shadow: 0 0 12px rgba(0, 0, 0, 0.3);
        margin-bottom: 2rem;
      }

      .profile-img {
        width: 120px;
        height: 120px;
        object-fit: cover;
        border-radius: 50%;
        margin-bottom: 1rem;
        border: 3px solid #8bc34a;
      }

      .edit-btn {
        margin-top: 1rem;
        display: inline-block;
        padding: 0.6rem 1.2rem;
        border: none;
        background-color: #8bc34a;
        color: #0f172a;
        font-weight: bold;
        border-radius: 8px;
        text-decoration: none;
        transition: transform 0.2s ease;
        padding: 15px;
      }

      .edit-btn:hover {
        transform: scale(1.05);
      }

      .videos-section h2 {
        margin-bottom: 1rem;
        text-align: center;
        color: #8bc34a;
      }

      .videos-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
      }

      .video-card {
        background: rgba(255, 255, 255, 0.07);
        border-radius: 12px;
        overflow: hidden;
        padding: 1rem;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        text-align: center;
      }

      .video-card p {
        margin-top: 0.5rem;
        font-weight: 500;
      }

      @media (max-width: 600px) {
        .profile-card,
        .videos-section {
          padding: 1rem;
        }

        .video-card iframe {
          height: 180px;
        }
      }
    </style>
  </body>
</html>
